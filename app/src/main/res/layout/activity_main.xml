    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7"
        android:gravity="bottom"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="75sp"
            android:text="Hello World!"
            android:id="@+id/cul_result"
            android:textSize="25dp"
            android:gravity="right|bottom"
            android:layout_gravity="center"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:weightSum="5"
            android:padding="10dp">

            <TableRow
                android:id="@+id/tablerow_0"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="4">

                <Button
                    android:id="@+id/button_c"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="C" />

                <Button
                    android:id="@+id/button_ce"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="CE"/>
                <Button
                    android:id="@+id/button_none"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text=""/>
                <Button
                    android:id="@+id/button_dvide"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="÷"/>
            </TableRow>

            <TableRow
                android:id="@+id/tablerow_1"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="4">

                <Button
                    android:id="@+id/button_7"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="7" />

                <Button
                    android:id="@+id/button_8"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="8"/>
                <Button
                    android:id="@+id/button_9"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="9"/>
                <Button
                    android:id="@+id/button_multi"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="×"/>
            </TableRow>

            <TableRow
                android:id="@+id/tablerow_2"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/button_4"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="4"/>
                <Button
                    android:id="@+id/button_5"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="5"/>
                <Button
                    android:id="@+id/button_6"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="6"/>
                <Button
                    android:id="@+id/button_minus"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="-"/>
            </TableRow>

            <TableRow
                android:id="@+id/tablerow_3"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/button_1"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="1"/>
                <Button
                    android:id="@+id/button_2"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="2"/>
                <Button
                    android:id="@+id/button_3"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="3"/>
                <Button
                    android:id="@+id/button_plus"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="+"/>
            </TableRow>

            <TableRow
                android:id="@+id/tablerow_4"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/button_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="0"/>
                <Button
                    android:id="@+id/button_00"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="00"/>
                <Button
                    android:id="@+id/button_priod"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="."/>
                <Button
                    android:id="@+id/button_equal"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="="/>
            </TableRow>
        </TableLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>